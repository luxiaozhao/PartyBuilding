<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_results_list_layout2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="csascascas"
        android:textColor="#8A878A"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_results_list_layout2_shijian"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="saascascas"
            android:textColor="#4DB8FF"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_results_list_layout2_gaoyao"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="saascas"
            android:textColor="#4DB8FF"
            android:textSize="15sp"/>


    </LinearLayout>


</LinearLayout>